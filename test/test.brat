include :file
include :assert

[:array :enumerable :examples :file :function
	:hash :misc :number :object :parser :regex :stdlib :string].each { name |
	
	#Force recompilation
	true? file.exists?("test/test-#{name}.lua")
		{ file.delete "test/test-#{name}.lua" }

	protect { p "Loading #{name} tests..."; import "test/test-#{name}" } rescue: { e | p e }
	p "-" * 50
	
	#Clean up Lua files
	true? file.exists?("test/test-#{name}.lua")
		{ file.delete "test/test-#{name}.lua" }
}
